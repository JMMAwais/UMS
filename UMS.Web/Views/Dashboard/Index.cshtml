@model UMS.Web.Models.UserProfileViewModel

@{
    Layout = "_DashboardLayout";   
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

<div class="card p-3 mt-3 shadow-sm">
    <img src="https://localhost:7240/@Model.ProfileImageUrl" alt="Profile Image"
         class="img-thumbnail mb-3" style="width: 150px; height: 150px; object-fit: cover;" />

    <p><strong>UserName:</strong> @Model.UserName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Role:</strong> @Model.Roles.FirstOrDefault()</p>

    <a href="@Url.Action("EditProfile", "Dashboard")" class="btn btn-primary mt-2">Edit Profile</a>
</div>


