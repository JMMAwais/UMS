@model IEnumerable<UMS.Web.Models.Dashboard.UserListViewModel>

@{
    Layout = "_DashboardLayout";  
    ViewData["Title"] = "Manage Users";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<h2>Manage Users</h2>

<div class="mb-3 text-end">
    <a href="@Url.Action("CreateUser", "Dashboard")" class="btn btn-success">+ Add New User</a>
</div>

<table class="table table-bordered table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Role</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@(user.Roles?.FirstOrDefault() ?? "No Role")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Dashboard", new { id = user.Id })" class="btn btn-sm btn-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>
